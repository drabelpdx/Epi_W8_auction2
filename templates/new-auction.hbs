<h1>New auction</h1>

<form>
  <div class="form-group">
    <label for="title">Title: </label>
    {{input id="title" class="form-control" value=title}}
  </div>

  <div class="form-group">
    <label for="identifier">Describe your auction here: </label>
    {{textarea id="identifier" class="form-control" rows="15" value=identifier}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Save</button>

</form>
