{{#if isEditing}}
  <form>
    <div class="form-group">
      <label for="name">Item Name:</label>
      {{input value=name id="name" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="description">Description:</label>
      {{textarea value=description id="description" class="form-control" rows="5"}}
    </div>
    <div class="form-group">
      <label for="owner">Owner:</label>
      {{input value=owner id="owner" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="bidNumber">Bid Number:</label>
      {{input value=bidNumber id="bidNumber" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="startPrice">Suggested Starting Price:</label>
      {{input value=startPrice id="startPrice" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="backstory">Item History:</label>
      {{textarea value=backstory id="backstory" class="form-control" rows="5"}}
    </div>
    <div class="form-group">
      <label for="image">Item Image:</label>
      {{input value=image id="image" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="yearAquired">Year Aquired by Auctioner:</label>
      {{input value=yearAquired id="yearAquired" class="form-control"}}
    </div>

    <button class="btn btn-primary" {{action 'save'}}>Update Item</button>
  </form>

{{else}}


<div class="row">
  <div class="col-md-6">
    <div class="item-details">
      <h4>item: {{name}}</h4>
      <h4>description: {{description}}</h4>
      <h4>owner: {{owner}}</h4>
      <h4>bidNumber: {{bidNumber}}</h4>
      <h4>startPrice: {{startPrice}}</h4>
      <h4>backstory: {{backstory}}</h4>
      <h4>year aquired: {{yearAquired}}</h4>
    </div>
  </div>
  <div class="col-md-6">
    <div class="item-image">
      <img {{bind-attr src=this.image }}>
    </div>
  </div>
</div>


{{/if}}

{{outlet}}

<button class="btn btn-primary" {{action 'edit'}}>Edit this Item</button>
<button class="btn btn-danger" {{action 'deleteItem'}}>Delete this Item from Auction</button>
<br>
<br>

<button class="btn btn-primary" {{action 'back'}}>Back to Auction</button>
